@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Role";
}

<h1 class="page-header">
    Role
    <small>Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="javascript:void(0);">Master</a></li>
    <li><a href="@Url.Action("Index", "Role")">Role</a></li>
    <li class="active">Edit</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
                <i class="fa fa-edit"></i>&nbsp;<strong>Edit Data</strong> 
            </div>
            <div class="pull-right">
                <a href="@Url.Action("Index", "Role")" class="btn btn-sm btn-primary">
                    <i class="fa fa-rotate-left"></i>&nbsp;Back
                </a>
                <a href="@Url.Action("Create", "Role")" class="btn btn-sm btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Create New
                </a>
                @if (!Model.Name.Equals("Administrator"))
                {
                    <a href="@Url.Action("Delete", "Role", new {  id = Model.Id })" class="btn btn-sm btn-danger" id="btn-delete-data">
                        <i class="fa fa-trash"></i>&nbsp;Delete
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Role", Model, FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", @id = "form-submit",  @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i>&nbsp;Save
                    </button>
                    <button type="reset" class="btn btn-warning">
                        <i class="fa fa-refresh"></i>&nbsp;Reset
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="panel-footer"></div>
</div>
