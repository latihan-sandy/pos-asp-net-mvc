@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser
@using Microsoft.AspNet.Identity.EntityFramework
@{
    ViewBag.Title = "User";
    var Roles = (List<IdentityRole>)ViewBag.Roles;
}


<h1 class="page-header">
    User
    <small>Management</small>
</h1>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="javascript:void(0);">Master</a></li>
    <li><a href="@Url.Action("Index", "User")">User</a></li>
    <li class="active">Detail</li>
</ol>

@if (TempData["message_success"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <p class="text-left"><i class="fa fa-check"></i>&nbsp;@Html.Raw(TempData["message_success"])</p>
    </div>
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix">
            <div class="pull-left">
                <i class="fa fa-search"></i>&nbsp;<strong>Detail</strong>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("Index", "User")" class="btn btn-sm btn-primary">
                    <i class="fa fa-rotate-left"></i>&nbsp;Back
                </a>
                <a href="@Url.Action("Create", "User")" class="btn btn-sm btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Create New
                </a>
                <a href="@Url.Action("Edit", "User", new {  id = Model.Id })" class="btn btn-sm btn-warning">
                    <i class="fa fa-edit"></i>&nbsp;Edit Data
                </a>
                <a href="@Url.Action("Delete", "User", new {  id = Model.Id })" class="btn btn-sm btn-danger" id="btn-delete-data">
                    <i class="fa fa-trash"></i>&nbsp;Delete
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Username :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.UserName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Phone Number :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PhoneNumber</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Roles :</label>
                <div class="col-sm-10">
                    @{
                        if (Roles != null)
                        {
                            foreach (var row in Roles)
                            {
                                @Html.Raw(row.Name + " ,")
                            }
                        }
                    }
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer"></div>
</div>
